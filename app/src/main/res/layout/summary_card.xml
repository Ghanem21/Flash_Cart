<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="649dp"
    android:layout_height="306dp"
    android:background="@color/gray_background">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:textStyle="bold"
        android:fontFamily="@font/font"
        android:textSize="27sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginStart="34dp"
        android:layout_marginTop="24dp"
        android:text="Order No:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        style="@style/normalTextinSummary" />

    <TextView
        android:id="@+id/textView4"
        style="@style/normalTextinSummary"
        android:text="Order Date:"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
    <TextView
        android:id="@+id/textView6"
        style="@style/normalTextinSummary"
        android:text="Item No:"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
    <TextView
        android:id="@+id/textView7"
        style="@style/normalTextinSummary"
        android:text="Order Total:"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/saved_value_text"
        style="@style/normalTextinSummary"
        android:textColor="@color/green_text"
        android:text="you saved $12.64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/order_no_value_text"
        style="@style/normalTextinSummary"
        android:text="12345678900"
        android:layout_marginEnd="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/order_date_value_text"
        style="@style/normalTextinSummary"
        android:layout_marginTop="8dp"
        android:text="03/08/2022"
        app:layout_constraintEnd_toEndOf="@+id/order_no_value_text"
        app:layout_constraintTop_toTopOf="@+id/textView4" />
    <TextView
        android:id="@+id/item_no_value_text"
        style="@style/normalTextinSummary"
        android:layout_marginTop="8dp"
        android:text="25"
        app:layout_constraintEnd_toEndOf="@+id/order_no_value_text"
        app:layout_constraintTop_toTopOf="@+id/textView6" />
    <TextView
        android:id="@+id/order_total_value_text"
        style="@style/normalTextinSummary"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="$125.5"
        app:layout_constraintEnd_toEndOf="@+id/order_no_value_text"
        app:layout_constraintTop_toTopOf="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>